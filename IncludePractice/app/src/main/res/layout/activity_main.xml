<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vg_include_first"
        layout="@layout/layout_first"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vg_include_second"
        layout="@layout/layout_second"
        app:layout_constraintTop_toBottomOf="@id/vg_include_first"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vg_include_third"
        layout="@layout/layout_third"
        app:layout_constraintTop_toBottomOf="@id/vg_include_second"/>

</androidx.constraintlayout.widget.ConstraintLayout>